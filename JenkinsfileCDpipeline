pipeline {
  agent any
  stages{
    stage("Run images") {
       steps {
          sh 'docker rm -f $(docker ps -aq) || true'
          
          sh 'docker rmi -f $(docker images -a -q) || true'

          sh 'docker pull jloperad/praxis-gildedrose_backend'
          sh 'docker pull jloperad/praxis-gildedrose_frontend'
          sh 'docker-compose up -d'
       }
    }
  }
}